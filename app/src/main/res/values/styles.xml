<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- MENU BAR STYLE -->

    <style name="menu_bar">
        <item name="android:background">@drawable/dialog_full_holo_light</item>
        <item name="android:layout_marginTop">-10dp</item>
        <item name="android:layout_marginLeft">-10dp</item>
        <item name="android:layout_marginRight">-10dp</item>
    </style>

    <!-- MENU ITEMS STYLE -->
    <style name="active_menu_item">
        <item name="android:textColor">#FF3D00</item>
    </style>

    <style name="menu_items">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <!-- PLAYER STYLES -->
    <style name="player_button">
        <item name="android:paddingTop">20dp</item>
        //compensate accent bar height
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="player_uploader">
        <item name="android:paddingTop">16dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="player_song">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- PLAYER ACTIVITY STYLES -->
    <style name="player_activity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="player_activity_uploader">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="player_activity_song">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="collapse_arrow">
        <item name="android:padding">16dp</item>
    </style>

    <style name="bottom_toolbar">
        <item name="android:padding">16dp</item>
    </style>

    <!-- DESCRIPTION TEXT STYLE -->

    <style name="description_text">
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>
